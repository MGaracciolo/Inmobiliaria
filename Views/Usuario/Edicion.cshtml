@model net.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
	int id = Model==null ? 0 : Model.UsuarioId;
}

<div class="text-center">
    <h3 class="display-4">@((id== 0) ? "Crear nuevo usuario" : "Editar usuario"):</h3>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Guardar" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" readonly name="UsuarioId" value="@id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group">
					<label class="control-label">Rol</label>
					<select class="form-control" name="Rol">
						@foreach (var rol in (IDictionary<int, string>)ViewBag.Roles)
						{
							@:<option @(rol.Key == Model.Rol ? "selected" : "") value="@rol.Key">@rol.Value</option>
						}
					</select>
					<span asp-validation-for="Rol" class="text-danger"></span>
				</div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" id="guardar"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            $('#guardar').click(function(e) {
                e.preventDefault();
                Swal.fire({
                    title: "¿Guardar cambios?",
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: "Guardar",
                    denyButtonText: "No guardar"
                }).then((result) => {
                    if (result.isConfirmed) {
                         $('form').off('submit').submit();
                    }
                });
            });
        });
        @if (TempData["Mensaje"] != null)
        {
            <text>
            Swal.fire({
                position: 'center',
                icon: 'success',
                text: '@TempData["Mensaje"]',
                showConfirmButton: false,
                timer: 1500
                });
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
            Swal.fire({
                position: 'center',
                icon: 'error,
                text: '@TempData["Error"]',
                showConfirmButton: false,
                timer: 1500
                });
            </text>
        }
    </script>
}