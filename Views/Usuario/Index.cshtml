@model IEnumerable<net.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
    var random = new Random();
}

<div class="text-center">
    <h3 class="display-4">Usuarios registrados:</h3>
</div>

<table id="usuariosTable" class="table row-border dt-center">
    <thead>
        <tr>
            <th>Avatar</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if(!String.IsNullOrEmpty(item.Avatar)) 
                    {
                        var x = item.Avatar + "?" + random.Next();
                        <img width="32" src="@x" />
                    }
                    else 
                    {
                        <span>Sin foto</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                   @Html.DisplayFor(modelItem => item.RolNombre)
                </td>
                <td>
                    <a href="/Usuario/Edicion/@item.UsuarioId"><i class="fa-solid fa-pen-to-square"></i></a> |
                    <a href="/Usuario/Detalle/@item.UsuarioId"><i class="fa-solid fa-eye"></i></a> |
                    <a href="#" class="text-danger eliminar" data-url="/Usuario/Eliminar/@item.UsuarioId"><i class="fa-solid fa-trash"></i></a>
                </td>
                
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6"><a href="/Usuario/Creacion"><i class="fa-solid fa-plus"></i></a></td>
        </tr>
    </tfoot>
</table>

@section Scripts{
    <script>
        $(document).ready(function() {
            $('.eliminar').click(function(e) {
                e.preventDefault(); 
                var url = $(this).data('url'); 
                Swal.fire({
                    title: "¿Eliminar usuario?",
                    text: "Los datos se eliminan definitivamente",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Eliminar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
            });
        });
        @if (TempData["Mensaje"] != null)
            {
                <text>
                Swal.fire({
                    text: '@TempData["Mensaje"]',
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 1500
                });
                </text>
            }
        @if (TempData["Error"] != null)
        {
            <text>
            Swal.fire({
                position: "center",
                icon: "error",
                text: '@TempData["Error"]',
                showConfirmButton: false,
                timer: 1500
                });
            </text>
        }
    </script>
}