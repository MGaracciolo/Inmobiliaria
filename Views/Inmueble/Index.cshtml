@model IEnumerable<net.Models.Inmueble>
@{
    ViewData["Title"] = "Inmuebles";
}

<div class="text-center">
    <h3 class="display-4">Inmuebles registrados:</h3>
	
</div>
<table class="table">
	<thead>
		<tr>
			<th>
				ID
			</th>
			<th>
				Dirección
			</th>
			<th>
				Propietario
			</th>
			<th>
				Uso
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.id_inmueble)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.id_direccion)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.id_propietario)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.uso)
				</td>
				<td>
                    <a href="/Inmueble/Edicion/@item.id_inmueble"><i class="fa-solid fa-pen-to-square"></i></a>|
					<a href="/Inmueble/Detalle/@item.id_inmueble"><i class="fa-solid fa-eye"></i></a>|
					<a href="/Inmueble/Eliminar/@item.id_inmueble"><i class="fa-solid fa-trash"></i></a>
				</td>
			</tr>
		}
		
	</tbody>
	<tfoot>
		<tr>
			<td>
				<a href="/Inmueble/Edicion/"> <i class="fa-solid fa-plus"></i></a>
			</td>
		</tr>
	</tfoot>
</table>


@section Scripts{
	<script>
		
	</script>
}