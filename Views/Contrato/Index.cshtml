@model IEnumerable<net.Models.Contrato>
@{
    ViewData["Title"] = "Contrato";
	
}

<div class="text-center">
    <h3 class="display-4">Contratos registrados:</h3>
	
</div>
<div class="row mb-3">
    <div class="col-md-6 d-flex align-items-center">

        <div class="btn-group" role="group" aria-label="Filtros de estado">
            <button type="button" class="btn btn-outline-primary" id="todosBtn">Todos</button>
            <button type="button" class="btn btn-outline-success" id="activoBtn">Activos</button>
            <button type="button" class="btn btn-outline-danger" id="desactivadoBtn">Inactivos</button>
        </div>
    </div>
</div>
<div class="mb-3" style="max-width: 250px; margin-bottom: 15px;">
    <label for="plazo" class="form-label">Seleccione el plazo (días):</label>
    <select class="form-select" id="plazo">
        <option value="sinFiltro" selected="@(ViewBag.PlazoSeleccionado == null)">Sin plazo</option>
        <option value="30" selected="@(ViewBag.PlazoSeleccionado == 30)">30 días</option>
        <option value="60" selected="@(ViewBag.PlazoSeleccionado == 60)">60 días</option>
        <option value="90" selected="@(ViewBag.PlazoSeleccionado == 90)">90 días</option>
    </select>
    <button id="filtrarBtn" class="btn btn-primary mt-2">Filtrar</button>
</div>
<table id="contratosTable" class="table row-border dt-center" >
    <thead>
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Propietario</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Inquilino)</td>
                <td>@(item.Inmueble?.DireccionI)</td>
                <td>@(item.Inmueble?.Propietario)</td>
                <td>@(item.Desde.ToString("dd/MM/yyyy"))</td>
                <td>@(item.Hasta.ToString("dd/MM/yyyy"))</td>
                @* <td>@(item.Anulacion != null ? item.Anulacion.Value.ToString("dd/MM/yyyy") : "-" )</td> *@
                <td>@(item.Hasta >= DateTime.Now ? "Ocupado" : "Disponible")</td>
                <td>
                    <a href="/Contrato/Detalle/@item.ContratoId"><i class="fa-solid fa-eye"></i></a>
                    @if(item.Estado == true && User.IsInRole("Administrador"))
					{
                        <span> | </span><a href="/Contrato/Edicion/@item.ContratoId"><i class="fa-solid fa-pen-to-square"></i></a><span> | </span>
                        <a href="#" data-url="/Contrato/Eliminar/@item.ContratoId" class="text-danger desactivar"><i class="fa-solid fa-trash"></i></a>
					}else if(item.Estado == false && User.IsInRole("Administrador"))
                    {
                        <span> | </span><a href="#" data-url="/Contrato/Activar/@item.ContratoId" class="text-success activar"><i class="fa-solid fa-trash-arrow-up"></i></a>
					}else if(item.Estado == true )
                    {
                        <span> | </span><a href="/Contrato/Edicion/@item.ContratoId"><i class="fa-solid fa-pen-to-square"></i></a>
                    }
                </td>
                </tr>
            
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7">
                <a href="/Contrato/Edicion/"> <i class="fa-solid fa-plus"></i></a>
            </td>
        </tr>
    </tfoot>
</table>


@section Scripts{
    <script>
        $(document).ready(function() {
            $('#filtrarBtn').click(function () {
                var plazo = $('#plazo').val();
                if (plazo === "sinFiltro") {
                    window.location.href = '/Contrato';
                } else {
                    window.location.href = '/Contrato/FiltrarPorPlazo?plazo=' + plazo;
                }
            });
            $('.desactivar').click(function(e) {
                e.preventDefault(); 
                var url = $(this).data('url'); 
                Swal.fire({
                    title: "¿Desactivar contrato?",
                    text: "El inmueble volvera a estar disponible",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Desactivar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
            });

            $('.activar').click(function(e) {
                e.preventDefault(); 
                var url = $(this).data('url'); 
                Swal.fire({
                    title: "¿Activar contrato?",
                    text: "El inmueble volvera a estar ocupado",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Activar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
            });
        });
    </script>
}