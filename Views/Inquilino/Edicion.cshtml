@model net.Models.Inquilino
@{
    ViewData["Title"] = "Editar Inquilino";
	int id = Model==null ? 0 : Model.InquilinoId;
}

<div class="text-center">
    <h3 class="display-4">@((id== 0) ? "Crear nuevo inquilino" : "Editar inquilino"):</h3>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Guardar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" readonly name="InquilinoId" value="@id" />
            <div class="form-group">
                <label asp-for="NombreI" class="control-label"></label>
                <input asp-for="NombreI" class="form-control" />
                <span asp-validation-for="NombreI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoI" class="control-label"></label>
                <input asp-for="ApellidoI" class="form-control" />
                <span asp-validation-for="ApellidoI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DniI" class="control-label"></label>
                <input asp-for="DniI" class="form-control"/>
                <span asp-validation-for="DniI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoI" class="control-label"></label>
                <input asp-for="TelefonoI" class="form-control" />
                <span asp-validation-for="TelefonoI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailI" class="control-label"></label>
                <input asp-for="EmailI" class="form-control" />
                <span asp-validation-for="EmailI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" id="guardar"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            $('#guardar').click(function(e) {
                e.preventDefault();
                Swal.fire({
                    title: "¿Guardar cambios?",
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: "Guardar",
                    denyButtonText: "No guardar"
                }).then((result) => {
                    if (result.isConfirmed) {
                         $('form').off('submit').submit();
                    }
                });
            });
        });
    @if (TempData["Mensaje"] != null)
    {
        <text>
        Swal.fire({
            position: "center",
            icon: "success",
            text: '@TempData["Mensaje"]',
            showConfirmButton: false,
            timer: 1500
            });
        </text>
    }
    </script>
    <script>
    @if (TempData["Error"] != null)
    {
        <text>
        Swal.fire({
            position: "center",
            icon: "error",
            text: '@TempData["Error"]',
            showConfirmButton: false,
            timer: 1500
            });
        </text>
    }
    </script>I
}